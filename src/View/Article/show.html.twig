{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - Titre article
{% endblock %}

{% block content %}
    {% include '_includes/Article/bt-article-head.html.twig' %}
    {# Article custom content, images then text #}
    {% embed '_includes/Article/bt-article-content.html.twig' %}
        {% block article_main_img %}{{ picture.pictureMain.link }}{% endblock %}
        {% block article_content_part1 %}
            {{ bodyArticleSplit.0 }}
        {% endblock %}
        {% block article_second_img %}{{ picture.picture2.link }}{% endblock %}
        {% block article_content_part2 %}
            {{ bodyArticleSplit.1 }}
        {% endblock %}
        {% block article_third_img %}{{ picture.picture3.link }}{% endblock %}
