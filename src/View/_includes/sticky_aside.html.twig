<aside>
    <div class="bt-sticky-aside card rounded-4" style="width: 18rem;">
        <div class="card-header rounded-top-4" style="{% block sticky_aside_header_style %}background-color: red{% endblock %}">
            <h4>Les plus populaires</h4>
            <div class="bt-sticky-aside-line"></div>
        </div>
        <a href="" style="{% block sticky_aside_first_article_style %}background-color: red{% endblock %}">
            <ul class=" list-group-flush">
                <li class="list-group-item">{% block sticky_first_article_title %}Article 1{% endblock %}</li>
            </ul>
            <div class="bt-sticky-aside-line"></div>
        </a>

        <a href="" style="{% block sticky_aside_second_article_style %}background-color: red{% endblock %}">
            <ul class=" list-group-flush">
                <li class="list-group-item">{% block sticky_second_article_title %}Article 2{% endblock %}</li>
            </ul>
            <div class="bt-sticky-aside-line"></div>
        </a>

        <a class="rounded-bottom-4" href="" style="{% block sticky_aside_third_article_style %}background-color: red{% endblock %}">
            <ul class=" list-group-flush">
                <li class="list-group-item">{% block sticky_third_article_title %}Article 3{% endblock %}</li>
            </ul>
        </a>
    </div>
</aside>
