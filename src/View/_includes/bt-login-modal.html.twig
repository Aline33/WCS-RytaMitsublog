

<!-- Modal BOOTSTRAP -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-header d-flex-end" id="bt-button-close-modal"> <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> </div>
        <div class="modal-content d-flex">
            <div class="modal-body" id="bt-login-modal-body">

                <!-- DIV FOR THE LOGIN -->
                <div class="d-flex-column" id="bt-Login">
                    <h1 class="p-1">Se Connecter</h1>
                    <form action="" method="post">
                        <div>
                            <label for="pseudo">Pseudo</label>
                            <input type="text" name="pseudo" id="pseudo">
                        </div>

                        <div>
                            <label for="password">Password</label>
                            <input type="text" name="password" id="password">
                        </div>

                        <button type="submit">Se connecter</button>
                    </form>

                    <a href="#">Mot de passe oublié</a>
                </div>

                <!-- DIV THAT CREATES THE BAR IN THE MIDDLE -->
                <div class="d-flex-column" id="bt-login-seperation-bar"></div>

                <!-- DIV FOR THE FIRST VISIT -->
                <div class="d-flex-column" id="bt-firstVisit">

                    <div class="fs-1"><h1>Première Visit?</h1></div>

                    <div class="fs-6 p-3">
                        <button id="CreateNewUser">Je creér mon compte</button>
                    </div>

                    <div id="bt-showRegisterForm" style="display: none">
                        <form action="">
                            <div><label for="new-user_email">Email</label><br>
                                <input type="text" name="new-email" id="new-user_email">
                            </div>

                            <div><label for="new-pseudo">Pseudo</label><br>
                                <input type="text" name="new-pseudo" id="new-pseudo">
                            </div>

                            <div><label for="new-password">Password</label><br>
                                <input type="password" name="new-password" id="new-password">
                            </div>

                            <button type="submit">Creér nouveaux compte</button>
                        </form>
                    </div>

                </div>
            </div>

            <script>

                const createNewUserBtn = document.getElementById("CreateNewUser");
                const registerForm = document.getElementById("bt-showRegisterForm");
                createNewUserBtn.addEventListener("click", () => {
                    createNewUserBtn.style.display = "none";
                    registerForm.style.display = "block";
                });

            </script>
        </div>

            <!-- LOGO IN THE MIDDLE OF THE PAGE -->
            <div class="d-flex justify-content-center" id="bt-login-logo"><img src="/assets/images/FinishedLogoP2-modified.png" alt="Logo" height="200px" width="auto"></div>

        </div>
</div>

