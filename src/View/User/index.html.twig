{% extends 'layout.html.twig' %}
{# Custom title on the index #}
{% block title %}
    {{ parent() }} - Profil
{% endblock %}
{% block content %}
    <div class="container bt-profile">
        <div class ="" ></div>
            <h1 class="text-center pb-3">Mon profil</h1>
        <div class="row pb-5">
            <div class="col px-5">
                <table class="bt-table table">
                    <tr>
                        <td>Nom</td>
                        <td>{{ user.last_name }}</td>
                    </tr>
                    <tr>
                        <td>Pr√©nom</td>
                        <td>{{ user.first_name }}</td>
                    </tr>
                    <tr>
                        <td> Pseudo</td>
                        <td>{{ user.user_name }}</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <td class="bt-date">Date de naissance</td>
                        <td class="bt-date">{{ user.birthday|date("d/m/Y") }}</td>
                    </tr>
                </table>
            </div>
            <div class="col d-flex align-items-end">
                <div class="row mb-4">
                    <a class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" href="#">Modifier mon profil</a>
                    <a class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" href="#">Supprimer mon profil</a>
                </div>
            </div>
        </div>
        <div class="bt-profile-article row pt-3">
            <h3 class="col px-0">Mes articles</h3>
            <div class="col d-md-flex justify-content-md-end">
                <a class="bt-button bt-button-green btn btn-primary">Publier un article</a>
            </div>
        </div>

    </div>
{% endblock content %}
